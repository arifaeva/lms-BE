generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ClientRole {
  USER
  STUDENT
  ADMIN
}

model User {
  id        String  @id @default(cuid())
  name      String
  email     String  @unique
  password  String

  role             ClientRole        @default(USER)
  session   LoginSession?
  }

model LoginSession {
  id         String   @id @default(cuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])
  expiration DateTime 
}